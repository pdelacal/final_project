<nav class= "navbar navbar-default">
<%= link_to "Home", root_path %>
<% if current_user %>
   Signed in as <%= link_to current_user.name, current_user %>
   <% if current_user.listing %>
   | <%= link_to 'Your Listing', listing_path(current_user.listing) %>
   <% else %>
   | <%= link_to 'List Your Apartment', new_listing_path %>
   <% end %>
   | <%= link_to "Friends", friends_path %>
  | <%= link_to "Logout", logout_path %>
<% else %>
<button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#myModal">
  Login
</button>
<button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#signup">
  Signup
</button>
<% end %>
<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end -%>
</nav>




<!-- Signup modal -->
<div class="modal fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="signupLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="signupLabel">Hello and Welcome! <br>Please Signup</h4>
      </div>
      <div class="modal-body">
        <%= link_to 'Signup', register_path %>
        <br>
        <%= link_to "Sign up with Facebook", facebook_login_path %>
        <br>
        Already have an account?
        <%= link_to 'Login with Email', login_path %>
      </div>
    </div>
  </div>
</div>

<!-- Login Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Welcome Back, <br>Please Login</h4>
      </div>
      <div class="modal-body">
        <%= link_to 'Login with Email', 'javascript:void(0)', type: "button", class: "btn btn-danger login", "data-toggle" => "tab", role: "tab" %>
        <br>
        <%= button_to "Login with Facebook", facebook_login_path, type: "button", class: "btn btn-primary"  %>
        <br>
        Don't have an account?
        <%= link_to 'Register', register_path %>
      </div>
      <div class="tab-content">
        <!-- Login with Email -->
        <div class="tab-pane" id="login" role="tabpanel">
          <h1>Login</h1>

          <% unless current_user %>
          <%= form_tag '/login' do %>

          <div class="field">
            <%= label_tag :email %>
            <%= text_field_tag :email %>
          </div>

          <div class="field">
            <%= label_tag :password %>
            <%= password_field_tag :password %>
          </div>
          <%= submit_tag "Login" %> | <%= link_to "Sign in with Facebook", facebook_login_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} %>
          <br>

          <% end %>
          <% end %>

          <%= link_to 'Return to Home Page', root_path %>
        </div>
      </div>
    </div>
  </div>
</div>
