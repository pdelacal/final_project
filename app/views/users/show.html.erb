<p id="notice"><%= notice %></p>

<div class="profile_picture">
  <%= image_tag @user.picture if @user.picture %>
</div>

<div class="profile_info">
  <h2>
    <%= @user.name %>
  </h2>
</div>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
<%= link_to "Questionnaire", response_path %>
</p>

<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>
<%= link_to 'Back', :back %>
