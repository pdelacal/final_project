<h1>Login</h1>

<% unless current_user %>
  <%= form_tag '/login' do %>

    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>

    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <%= submit_tag "Login" %> | <%= link_to "Sign in with Facebook", facebook_login_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} %>
  <br>

  <% end %>
<% end %>

<%= link_to 'Return to Home Page', root_path %>
