<h1>Login</h1>

<%= form_tag '/login' do %>

  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Login" %> | <%= link_to "Sign in with Facebook", facebook_login_path %>
<br>

<% end %>

<%= link_to 'Return to Home Page', root_path %>
